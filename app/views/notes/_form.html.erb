<div class="container">
<div class="row">
<div class="container-fluid px-sm-5">
  <section class="resume-section p-lg-5 d-flex align-items-center" id="note">
    <div class="w-100">
      <%= form_with(model: note, local: true) do |form| %>
        <% if note.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(note.errors.count, "error") %> prohibited this note from being saved:</h2>
            <ul>
            <% note.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <h4><%= form.label :title, "Título" %> </h4>
          <%= form.text_field :title, class:"form-control" %>
        </div>
        <div class="form-group shadow-textarea">
          <h4> <%= form.label :description, "Descrição" %></h4>
          <%= form.text_area :description, class:"form-control z-depth-1", rows:"20" %>
        </div>
        <div class="form-group">
          <%= form.submit 'Salvar!', class:"btn btn-outline-success"%>
          <%= link_to "Voltar", notes_path, class:"btn btn-outline-dark"%>
        </div>
      <% end %>
    </div>
  </div>
</div>
